<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Name="myTabControl" SelectionChanged="myTabControl_SelectionChanged">
            <TabItem Header="Menu">
                <Grid Background="#FFE5E5E5">
                    <DataGrid Background="LightCoral" Name="menuDataGrid">

                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Cart">
                <Grid Background="#FFE5E5E5">
                    <DataGrid Background="LightCyan" Name="cartDataGrid">

                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Table Reservation">
                <Grid Background="#FFE5E5E5">
                    <DataGrid Background="LightPink" Name="reservationDataGrid">

                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
